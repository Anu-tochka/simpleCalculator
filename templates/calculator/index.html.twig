{% extends 'base.html.twig' %}

{% block body %}

<div class="container-lg">
<div class="d-flex flex-column gap-4">
<h1>Калькулятор</h1>
{{ form_start (form) }}
	<div class="d-flex flex-row gap-3">
	<div class="d-flex flex-column justify-content-between">
		{{ form_label(form.arg1, 'Аргумент 1') }}
		{{ form_widget(form.arg1, {
			'attr': {'required': true, 'class': 'form-control-primary-border-subtle'}
		}) }}
	</div>
	<div class="d-flex flex-column justify-content-between">
		{{ form_label(form.sign, 'Операция') }}
		{{ form_widget(form.sign, {
			'attr': {'class': 'form-select position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px'}
        }) }}
	</div>
	<div class="d-flex flex-column justify-content-between">
		{{ form_label(form.arg2, 'Аргумент 2') }}
		{{ form_widget(form.arg2, {
			'attr': {'required': true, 'class': 'form-control-primary-border-subtle'}
		}) }}
	</div>
	<div class="d-flex flex-column justify-content-end">
		<button type="submit" class="btn btn-primary" id="calculate">Вычислить</button>
	</div>
	</div>
	<div>
		{{ form_errors(form) }}
	</div>
	{{ form_end (form) }}
<div id="result" class="alert alert-info">
	{{ result }}
</div>
</div>
</div>
{% endblock %}